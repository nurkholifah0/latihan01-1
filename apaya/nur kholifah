    .grid {
      display: grid;
      /* auto-fit + minmax membuat jumlah kolom otomatis menyesuaikan ukuran layar */
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: clamp(16px, 2.5vw, 28px);
    }

    .card {
